<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:label="Audio"
    app:startDestination="@id/nav_welcome">
    <fragment
        android:id="@+id/nav_store"
        android:name="com.jaybothra.flutefusion.RecyclerView.StoreFragment"
        android:label="Store"
        tools:layout="@layout/fragment_store" >
        <action
            android:id="@+id/action_nav_store_to_storeDetailFragment"
            app:destination="@id/nav_storeDetail" />
    </fragment>
    <fragment
        android:id="@+id/nav_tutorial"
        android:name="com.jaybothra.flutefusion.ListView.TutorialFragment"
        android:label="Tutorial"
        tools:layout="@layout/fragment_tutorial" >
        <action
            android:id="@+id/action_nav_tutorial_to_tutorialDetailsFragment"
            app:destination="@id/tutorialDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_maintain"
        android:name="com.jaybothra.flutefusion.ViewPager.VPHostFragment"
        android:label="Maintain"
        tools:layout="@layout/fragment_v_p_host" />
    <fragment
        android:id="@+id/nav_audio"
        android:name="com.jaybothra.flutefusion.Fragments.TanpuraTablaFragment"
        android:label="Tanpura"
        tools:layout="@layout/fragment_tanpura_tabla" />
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.jaybothra.flutefusion.Fragments.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/nav_welcome"
        android:name="com.jaybothra.flutefusion.WelcomePage.WelcomeFragment"
        android:label="Welcome to Flute"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_nav_welcome_to_nav_store"
            app:destination="@id/nav_store" />
        <action
            android:id="@+id/action_nav_welcome_to_nav_maintain"
            app:destination="@id/nav_maintain" />
        <action
            android:id="@+id/action_nav_welcome_to_nav_audio"
            app:destination="@id/nav_audio" />
        <action
            android:id="@+id/action_nav_welcome_to_nav_tutorial"
            app:destination="@id/nav_tutorial" />
        <action
            android:id="@+id/action_nav_welcome_to_nav_video"
            app:destination="@id/nav_video" />
    </fragment>
    <fragment
        android:id="@+id/tutorialDetailsFragment"
        android:name="com.jaybothra.flutefusion.ListView.TutorialDetailsFragment"
        android:label="Tutorial"
        tools:layout="@layout/fragment_tutorial_details" />
    <fragment
        android:id="@+id/nav_contacts"
        android:name="com.jaybothra.flutefusion.ContactFragment"
        android:label="Contact Us"
        tools:layout="@layout/fragment_contact" />
    <fragment
        android:id="@+id/nav_storeDetail"
        android:name="com.jaybothra.flutefusion.RecyclerView.StoreDetailFragment"
        android:label="Checkout"
        tools:layout="@layout/fragment_store_detail">
        <action
            android:id="@+id/action_nav_storeDetail_to_buyFragment"
            app:destination="@id/nav_buy" />
    </fragment>
    <fragment
        android:id="@+id/nav_buy"
        android:name="com.jaybothra.flutefusion.RecyclerView.BuyFragment"
        android:label="Buy Flute"
        tools:layout="@layout/fragment_buy">
        <action
            android:id="@+id/action_nav_buy_to_nav_welcome"
            app:destination="@id/nav_welcome" />
    </fragment>
    <fragment
        android:id="@+id/nav_video"
        android:name="com.jaybothra.flutefusion.Video.VideoFragment"
        android:label="Flute Videos"
        tools:layout="@layout/fragment_video" />
</navigation>
